<ol class="post-list">
    {{#each posts as |post|}}}}
    <li>
        <article class="post">
            <div class="title">
                <h2>{{post.title}}</h2>
                <p>{{post.body}}</p>
                <a href="/post/{{post.id}}/edit">Edit</a>
                <form action="/post/{{post.id}}" method="post">
                    <input type="hidden" name="_method" value="delete">
                    <input type="submit" value="Delete">
                </form>
            </div>
            <div class="meta">
                <p> by {{post.user.username}} on {{post.created_at}}</p>
                <a href="/comments/{{id}}">{{post.comments.length}} comments</a>
                <p>{{title}}</p>
                <p>{{body}}</p>
            </div>
        </article>
    </li>
    {{/each}}
</ol>