<ol class="post-list">
    {{#each posts as |post|}}
    <li>
        <article class="post">
            <div class="title">
                <h2>{{post.title}}</h2>
                <p>{{post.body}}</p>
                <a href="/post/{{post.id}}/edit">Edit</a>
                <form action="/post/{{post.id}}" method="post">
                    <input type="hidden" name="_method" value="delete">
                    <input type="submit" value="Delete">
                </form>
            </div>
        </article>
    </li>
    {{/each}}
</ol>